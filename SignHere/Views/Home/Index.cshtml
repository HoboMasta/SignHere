<div class="row">
    <div class="col-md-12">

        <div class="text-center">

            <form class="form-login">

                <h1>LOG IN</h1>
                <p class="lead">Are you a Notary or a Client?</p>
                <div id="tab" class="btn-group" data-toggle="buttons">
                    <a href="#prices" class="btn btn-default active" data-toggle="tab">
                        <input type="radio">Notary
                    </a>
                    <a href="#features" class="btn btn-default" data-toggle="tab">
                        <input type="radio">Client
                    </a>
                    
                </div>

                <input id="loginEmail" class="form-control" type="email" autofocus="" required="" placeholder="Email Address" />
                <input id="loginPassword" class="form-control" type="password" required="" placeholder="Password" />
                <button id ="BtnSignIn" type="submit" class="btn btn-lg btn-primary btn-block">Sign in</button>

            </form>

        </div>
             


     
