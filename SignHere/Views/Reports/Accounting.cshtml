
@{
    ViewBag.Title = "Accounting";
}

<h2>Accounting</h2>

<div class="main-content settings-content col-md-12" style="align-content:center;">
    <div class="notifications">

    </div>
    <h3 class="page-subtitle">
        <small>
            <i class="fa fa-download"></i>
        </small>
        Export Spreadsheets
    </h3>
    <div class="row">
        <div class="col-sm-5">
            <div class="alert alert-success alert-block fade in accounting-spreadsheet-alert">
                <button class="close" data-dismiss="alert" id="dismiss_accounting_spreadsheet_alert" type="button">×</button>
                Select the information you want to export. Each option will create a separate .csv file
                which can be viewed as an Excel Spreadsheet.
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-5">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form accept-charset="UTF-8" action="/accounting/spreadsheets" method="post">
                        <div style="margin:0;padding:0;display:inline"><input name="utf8" type="hidden" value="✓"><input name="authenticity_token" type="hidden" value="t+xQaLNQ0ExG/FQ/hFMKPSoTj4u1l72ixByOP3dUNqo="></div>
                        <div id="date_selectors">
                            <div class="form-group">
                                <label for="start_date">Start Date</label>
                                <input class="datepicker form-control hasDatepicker" id="start_date" name="start_date" type="date">
                            </div>
                            <div class="form-group">
                                <label for="end_date">End Date</label>
                                <input class="datepicker form-control hasDatepicker" id="end_date" name="end_date" type="date">
                            </div>
                        </div>
                        <div class="radio">
                            <label for="report_type_vendor">
                                <input checked="checked" id="report_type_vendor" name="report_type" type="radio" value="vendor">
                                Export Notary Vendor Info
                            </label>
                        </div>
                        <div class="radio">
                            <label for="report_type_client_info">
                                <input id="report_type_client_info" name="report_type" type="radio" value="client_info">
                                Export Client Customer Info
                            </label>
                        </div>
                        <div class="radio">
                            <label for="report_type_order">
                                <input id="report_type_order" name="report_type" type="radio" value="order">
                                Export Orders
                            </label>
                        </div>
                        <div class="radio">
                            <label for="report_type_clients_emails">
                                <input id="report_type_clients_emails" name="report_type" type="radio" value="clients_emails">
                                Export all client email addresses
                            </label>
                        </div>
                        
                        <div id="report-type-vendor-options">
                            <select class="form-control" id="notaries_scope" name="notaries_scope">
                                <option value="all_notaries">All notaries</option>
                                <option value="without_tax_id_or_ssn">Notaries without SSN or TaxId</option>
                            </select>
                        </div>
                        <br>
                        <input class="btn btn-primary btn-large" name="commit" type="submit" value="Generate Report">
                    </form>

                </div>
            </div>
        </div>
    </div>

</div>

